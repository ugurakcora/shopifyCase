{{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}
{{ 'swiper-bundle.min.js' | asset_url | script_tag }}
<section class="relative md:flex bg-gray-100 md:flex-nowrap sm:flex-wrap lg:flex-nowrap h-screen">
  <!-- Left Column - Image -->
  <div class="sm:w-full md:w-1/2 lg:w-1/2 ">
    <img src="{{ 'bg.png' | asset_url }}" alt="Image" class="sm:h-full lg:w-full lg:h-full object-cover " width="100%" height="100%" />
  </div>

  <!-- Right Column - Product Slider -->
  <div class="lg:w-1/2 md:w-1/2 md:mt-20 md:ml-20 text-continer">
    <div class="md:max-w-md">
      <h2 class="text-3xl font-extrabold mb-4 max-w-md">
        Everyday items, we have something to suit every occasion.
      </h2>
      <p class="mb-5 max-w-lg leading-7 font-normal text-base text-customGray">
        At suspendisse augue lectus arcu, accumsan ut sit posuere vitae sit tincidunt semper eu proin leo gravida cursus.
      </p>
      <a href="#" class="underline decoration-2 underline-offset-8 font-black text-sm leading-tight align-text-left border-none mt-5 link">
        Shop All Everyday Items
      </a>
    </div>

    <!-- Swiper Slider -->
    <div class="swiper-container swiper mt-9 overflow-auto scroll-smooth overflow-x-hidden">
      <div class="swiper-wrapper">
        <!-- Statik görsel 1 -->
        <div class="swiper-slide">
          <div class="product-card">
            <a href="#">
              <img src="{{ 'bg-one.png' | asset_url }}" alt="Ürün 1" class="w-full mt-5 h-auto" width="100%" height="100%"/>
              <div class="text-left text-sm mt-2">Ürün 1</div>
              <div class="flex justify-between mt-2 flex-wrap">
                <div class="text-left text-sm width">250₺</div>
                <div class="flex space-x-2 mt-1 width">
                  <div class="relative">
                    <div class="w-3 h-3 rounded-full cursor-pointer mt-1 selected-swatch" style="background-color: #ff0000">
                      <input type="radio" name="color-product1" value="red" class="absolute inset-0 opacity-0 cursor-pointer">
                    </div>
                  </div>
                </div>
              </div>
            </a>
          </div>
        </div>
        
        <!-- Statik görsel 2 -->
        <div class="swiper-slide">
          <div class="product-card">
            <a href="#">
              <img src="{{ 'bg-two.png' | asset_url }}" alt="Ürün 2" class="w-full mt-5 h-auto" width="100%" height="100%"/>
              <div class="text-left text-sm mt-2">Ürün 2</div>
              <div class="flex justify-between mt-2 flex-wrap">
                <div class="text-left text-sm width">350₺</div>
                <div class="flex space-x-2 mt-1 width">
                  <div class="relative">
                    <div class="w-3 h-3 rounded-full cursor-pointer mt-1 selected-swatch" style="background-color: #00ff00">
                      <input type="radio" name="color-product2" value="green" class="absolute inset-0 opacity-0 cursor-pointer">
                    </div>
                  </div>
                </div>
              </div>
            </a>
          </div>
        </div>
        
        <!-- Statik görsel 3 -->
        <div class="swiper-slide">
          <div class="product-card">
            <a href="#">
              <img src="{{ 'bg-three.png' | asset_url }}" alt="Ürün 3" class="w-full mt-5 h-auto" width="100%" height="100%"/>
              <div class="text-left text-sm mt-2">Ürün 3</div>
              <div class="flex justify-between mt-2 flex-wrap">
                <div class="text-left text-sm width">450₺</div>
                <div class="flex space-x-2 mt-1 width">
                  <div class="relative">
                    <div class="w-3 h-3 rounded-full cursor-pointer mt-1 selected-swatch" style="background-color: #0000ff">
                      <input type="radio" name="color-product3" value="blue" class="absolute inset-0 opacity-0 cursor-pointer">
                    </div>
                  </div>
                </div>
              </div>
            </a>
          </div>
        </div>
      </div>

      <!-- Add Navigation -->
      <div class="swiper-button-next" style="--swiper-navigation-size: 20p"></div>
    </div>
  </div>
</section>


<script>
  document.addEventListener("DOMContentLoaded", function () {
    const swiper = new Swiper(".swiper", {
      slidesPerView: 1,
      spaceBetween: 10,
      navigation: {
        nextEl: ".swiper-button-next",
      },
      breakpoints: {
        350: {
          slidesPerView: 2.25,
          spaceBetween: 10,
        },
        640: {
          slidesPerView: 2,
          spaceBetween: 20,
        },
        768: {
          slidesPerView: 3,
          spaceBetween: 30,
        },
        1024: {
          slidesPerView: 2.5,
          spaceBetween: 40,
        },
      },
    });
  });
</script>
